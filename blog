<body>
  <h1>Kullanıcı Tarafından Oluşturulan RSS Oluşturucu</h1>
  <form id="form">
    <label for="baslik">Başlık:</label>
    <input type="text" id="baslik" name="baslik" required>
    <br>
    <label for="aciklama">Açıklama:</label>
    <textarea id="aciklama" name="aciklama" required></textarea>
    <br>
    <label for="url">URL:</label>
    <input type="url" id="url" name="url" required>
    <br>
    <button type="submit">Oluştur</button>
  </form>
  <div id="rss-output"></div>
  <script>
  const form = document.getElementById("form");
  const baslikInput = document.getElementById("baslik");
  const aciklamaInput = document.getElementById("aciklama");
  const urlInput = document.getElementById("url");
  const rssOutput = document.getElementById("rss-output");

  form.addEventListener("submit", (e) => {
    e.preventDefault();

    const baslik = baslikInput.value;
    const aciklama = aciklamaInput.value;
    const url = urlInput.value;

    const olustur = (baslik, aciklama, url) => {
      // ... (RSS oluşturma kodunu buraya yapıştırın) ...
    };

    const rssMetni = olustur(baslik, aciklama, url);
    rssOutput.innerHTML = rssMetni;
  });
  </script>
